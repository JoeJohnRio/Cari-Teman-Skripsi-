<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/space_more_than_little">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"/>

                <TextView
                    android:id="@+id/tv_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daftar_kelompok"
                    android:textStyle="bold"
                    android:textColor="@color/black_effective"
                    android:textSize="20sp"
                    android:layout_marginStart="@dimen/space_more_than_little"/>

            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_low"
            />
    </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:id="@+id/ll_daftar_kelompok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/space_more_than_little"
            android:layout_marginTop="@dimen/space_little"
            android:layout_marginEnd="@dimen/space_more_than_little"
            app:layout_constraintTop_toBottomOf="@id/abl_name">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_little"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_kelompok_ic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pengalaman"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|start"
                        android:layout_marginStart="@dimen/space_little">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PKL - Tim Berjalan Bersama"
                            android:textColor="@color/black_effective"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_more_than_normal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anda, Johanes, Cirio."
                            android:textColor="@color/black_effective"
                            android:textSize="@dimen/text_normal"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/space_little"
                            android:background="@color/black_effective"/>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_little"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_kelompok_ic2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pengalaman"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|start"
                    android:layout_marginStart="@dimen/space_little">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PKL - Tim Berjalan Bersama"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_more_than_normal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anda, Johanes, Cirio."
                        android:textColor="@color/black_effective"
                        android:textSize="@dimen/text_normal"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/space_little"
                        android:background="@color/black_effective"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_kelompok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_24dp"
            app:backgroundTint="@color/black_effective"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/space_decent"
            android:layout_marginBottom="@dimen/space_big"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>