<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/space_more_than_little">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_back"/>

                    <TextView
                        android:id="@+id/tv_toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelompok Baru"
                        android:textStyle="bold"
                        android:textColor="@color/black_effective"
                        android:textSize="20sp"
                        android:layout_marginStart="@dimen/space_more_than_little"/>

                </LinearLayout>
            </com.google.android.material.appbar.MaterialToolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_low"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/tv_tambah_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih teman yang ingin ditambahkan"
            android:layout_marginTop="@dimen/space_more_than_little"
            android:layout_marginStart="@dimen/space_more_than_little"
            android:layout_marginEnd="@dimen/space_more_than_little"
            app:layout_constraintTop_toBottomOf="@id/abl_name"/>

        <View
            android:id="@+id/v_black_line_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_effective"
            android:layout_marginStart="@dimen/space_more_than_little"
            android:layout_marginEnd="@dimen/space_more_than_little"
            android:layout_marginTop="@dimen/space_little"
            app:layout_constraintTop_toBottomOf="@id/tv_tambah_desc"/>


        <include
            android:id="@+id/daftar_teman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/v_black_line_1"
            android:layout_marginTop="@dimen/space_little"
            android:layout_marginStart="@dimen/space_more_than_little"
            android:layout_marginEnd="@dimen/space_more_than_little"
            layout="@layout/item_tambah_pilih_teman"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_kelompok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            app:backgroundTint="@color/black_effective"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/space_decent"
            android:layout_marginBottom="@dimen/space_big"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>