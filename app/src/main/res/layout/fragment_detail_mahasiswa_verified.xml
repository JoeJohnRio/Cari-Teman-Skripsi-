<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_high">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tambah_pengalaman_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_more_than_little"
            android:layout_marginTop="@dimen/space_little"
            android:layout_marginEnd="@dimen/space_more_than_little"
            android:backgroundTint="@color/white_low"
            android:orientation="horizontal"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_little"
                android:text="Detail Mahasiswa"
                android:textColor="@color/black_effective"
                android:textSize="17sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:id="@+id/sv_detail_mahasiswa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/space_more_than_little"
            android:layout_marginTop="@dimen/space_more_than_little"
            android:layout_marginEnd="@dimen/space_more_than_little"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_tambah_pengalaman_title">

            <LinearLayout
                android:id="@+id/ll_pengalaman_lomba_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Foto KTM"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_foto_ktm_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="@dimen/space_little"
                    android:scaleType="centerCrop"
                    android:textSize="15sp"
                    tools:src="@drawable/capture" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Foto Profile"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_foto_profile_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="@dimen/space_little"
                    android:scaleType="centerCrop"
                    android:textSize="15sp"
                    tools:src="@drawable/capture" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Nama"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_nama_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="2dp"
                    android:hint="e.g. &quot;Name&quot;"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/space_little"
                    android:background="@color/grey_low" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Email"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_email_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="2dp"
                    android:hint="e.g. &quot;Mobile developer&quot;"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/space_little"
                    android:background="@color/grey_low" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="NIM"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_nim_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="2dp"
                    android:hint="e.g. &quot;Mobile developer&quot;"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/space_little"
                    android:background="@color/grey_low" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Jenis Kelamin"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_jenis_kelamin_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="2dp"
                    android:hint="e.g. &quot;Mobile developer&quot;"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/space_little"
                    android:background="@color/grey_low" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Tahun Mulai"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_tahun_mulai_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="2dp"
                    android:hint="e.g. &quot;Mobile developer&quot;"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/space_little"
                    android:background="@color/grey_low" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Preferensi"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_preferensi_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="2dp"
                    android:hint="e.g. &quot;Mobile developer&quot;"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/space_little"
                    android:background="@color/grey_low" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Fakultas"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_fakultas_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="2dp"
                    android:hint="e.g. &quot;Mobile developer&quot;"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/space_little"
                    android:background="@color/grey_low" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Program Studi"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_program_studi_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="2dp"
                    android:hint="e.g. &quot;Mobile developer&quot;"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/space_little"
                    android:background="@color/grey_low" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Keminatan"
                    android:textColor="@color/black_effective"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_keminatan_verifying_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/space_little"
                    android:layout_marginBottom="2dp"
                    android:hint="e.g. &quot;Mobile developer&quot;"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="@dimen/space_little"
                    android:background="@color/grey_low" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mb_accept_verification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_little"
                        android:layout_marginBottom="@dimen/space_more_than_little"
                        android:backgroundTint="@color/white_low"
                        android:paddingStart="@dimen/space_little"
                        android:paddingTop="@dimen/space_really_small"
                        android:paddingEnd="@dimen/space_little"
                        android:paddingBottom="@dimen/space_really_small"
                        android:text="TOLAK VERIFIKASI"
                        android:textColor="@color/black_effective"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mb_decline_verification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_little"
                        android:layout_marginEnd="@dimen/space_little"
                        android:layout_marginBottom="@dimen/space_more_than_little"
                        android:backgroundTint="@color/navy_blue"
                        android:paddingStart="@dimen/space_little"
                        android:paddingTop="@dimen/space_really_small"
                        android:paddingEnd="@dimen/space_little"
                        android:paddingBottom="@dimen/space_really_small"
                        android:text="TERIMA VERIFIKASI"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/mb_accept_verification" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>