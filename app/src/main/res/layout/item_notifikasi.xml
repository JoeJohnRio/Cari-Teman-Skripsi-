<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_little">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_foto_notifikasi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pengalaman"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_nama_teman_notifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joel Johanes Cirio"
            android:textColor="@color/black_effective"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/space_little"
            app:layout_constraintStart_toEndOf="@id/civ_foto_notifikasi"
            app:layout_constraintBottom_toTopOf="@id/tv_desc_notifikasi"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_desc_notifikasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Menerima permintaanpermintaanpermintaanpermintaan tim!"
            android:textColor="@color/black_effective"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/space_little"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/civ_foto_notifikasi"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_teman_notifikasi"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>