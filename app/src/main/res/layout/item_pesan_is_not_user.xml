<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cv_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_really_small"
        android:layout_marginTop="@dimen/space_really_small"
        android:layout_marginStart="@dimen/space_little"
        android:layout_marginEnd="@dimen/space_little"
        android:paddingEnd="@dimen/space_pretty_big"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_foto_profil_pesan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_picture"
            android:layout_marginTop="@dimen/space_little"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_little"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/space_more_than_little"
                android:paddingTop="@dimen/space_little"
                android:paddingEnd="@dimen/space_more_than_little"
                android:paddingBottom="@dimen/space_little">

                <TextView
                    android:id="@+id/tv_nama_pengirim_pesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Joel Cirio"
                    />

                <TextView
                    android:id="@+id/tv_isi_pesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jadi gimana project kita yang kemarin?"
                    android:textSize="18sp"
                    android:textColor="@color/black_effective"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>