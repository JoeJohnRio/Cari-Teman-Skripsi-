<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white_high"
        app:cardCornerRadius="@dimen/space_little"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_picture"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_little">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_check_green"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/space_really_small"
                        android:src="@drawable/check_green"/>

                    <TextView
                        android:id="@+id/tv_recommendation_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 of Recommendation"
                        android:textColor="@color/black_effective"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_more_than_little"
                    android:layout_marginTop="@dimen/space_really_small"
                    android:text="PKL - Anonymus"
                    android:textColor="@color/black_effective"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_decent"
                    android:layout_marginTop="@dimen/space_really_small"
                    android:text="Head of Creative Division at BEM Filkom UB"
                    android:textColor="@color/black_effective"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_really_small"
                    android:text="(Belum Memiliki Riwayat Lomba)"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_really_small"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_image_one"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:civ_border_width="2dp"
                            android:layout_marginTop="@dimen/space_really_small"
                            android:layout_marginEnd="@dimen/space_really_small"
                            app:civ_border_color="@color/white_high"
                            android:src="@drawable/profile_picture"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_image_two"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="@dimen/space_really_small"
                            android:layout_marginEnd="@dimen/space_really_small"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/white_high"
                            android:src="@drawable/profile_picture"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_image_three"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:civ_border_width="2dp"
                            android:layout_marginTop="@dimen/space_really_small"
                            android:layout_marginEnd="@dimen/space_really_small"
                            app:civ_border_color="@color/white_high"
                            android:src="@drawable/profile_picture"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_arrow_check_now"
                            android:layout_gravity="end|bottom"/>
                    </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>