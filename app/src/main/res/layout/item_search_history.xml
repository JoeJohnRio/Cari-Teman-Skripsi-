<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/space_little">

        <ImageView
            android:id="@+id/iv_history_ic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_history_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_more_than_little"
            android:layout_marginTop="2dp"
            android:text="Joel Johanes Cirio"
            android:textColor="@color/black_effective"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/iv_history_ic"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_history_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_more_than_little"
            android:layout_marginTop="2dp"
            android:text="@string/pkl"
            android:textColor="@color/black_effective"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_little"
            android:background="@color/grey_low"
            app:layout_constraintTop_toBottomOf="@id/iv_history_ic" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>