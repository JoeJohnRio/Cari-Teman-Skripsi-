<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_little"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_gambar_pengulas"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_little"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nama_pengulas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rio Dewantara Bayu"
                android:textColor="@color/blue_low"
                android:textSize="@dimen/text_more_than_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_isi_ulasan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tempat PKL-nya bagus, saya diajar
dengan baik disini, terima kasih
mas/mbak.Tempat PKL-nya bagus, saya diajar
dengan baik disini, terima kasih
mas/mbak.Tempat PKL-nya bagus, saya diajar
dengan baik disini, terima kasih
mas/mbak."
                android:textColor="@color/blue_low"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>
    </LinearLayout>

</layout>